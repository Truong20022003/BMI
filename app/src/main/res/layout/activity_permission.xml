<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UseSwitchCompatOrMaterialXml"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".Ui.Permission.PermissionActivity">

    <ImageView
        android:layout_width="216sp"
        android:layout_height="216sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50sp"
        android:layout_marginHorizontal="16sp"
        android:src="@drawable/img_logo_app" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22sp"
        android:layout_marginHorizontal="16sp"
        android:background="@drawable/custom_permission"
        android:orientation="vertical"
        android:paddingVertical="12sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_extrabold"
            android:text="@string/permission"
            android:textAlignment="center"
            android:textColor="@color/_32443a"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26sp"
            android:layout_marginTop="12sp"
            android:fontFamily="@font/inter_regular"
            android:minLines="2"
            android:text="@string/simply_enter_your_height_and_weight_to_calculate_your_bmi"
            android:textAlignment="center"
            android:textColor="@color/_32443a"
            android:textSize="16sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16sp"
        android:layout_marginTop="16sp"
        android:paddingVertical="12sp"
        android:background="@drawable/custom_permission_alow_asset">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16sp"
            android:text="@string/allow_access"
            android:fontFamily="@font/inter_bold"
            android:textSize="16sp"
            android:textColor="#666666"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingRight="16sp">
            <ImageView
                android:id="@+id/imgSwUnSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_switch_unselected"
                android:layout_gravity="center"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/imgSwSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_switch_selected"
                android:layout_gravity="center"
                android:visibility="invisible"/>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/btnGetStarted"
        android:layout_width="110sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:drawableRight="@drawable/ic_get_started"
        android:fontFamily="@font/inter_semibold"
        android:text="Get Started"
        android:textAlignment="center"
        android:textColor="#F96426"
        android:textSize="16sp" />

</LinearLayout>