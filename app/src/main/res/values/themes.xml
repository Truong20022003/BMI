<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BMI" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">#ffffff</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="radioButtonStyle">@style/CustomRadioButtonStyle</item>

    </style>

    <style name="Theme.hearRateMonitor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">#ffffff</item>
        <item name="android:navigationBarColor">#ffffff</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">#ffffff</item>
        <item name="android:statusBarColor">@color/transparent</item>


    </style>

    <style name="Theme.BMI" parent="Base.Theme.BMI" />


    <!-- Custom DatePicker Theme -->
    <style name="CustomDatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Tùy chỉnh màu cho các thành phần trong DatePicker -->
        <item name="android:datePickerDialogTheme">@style/CustomDatePickerText</item>
        <item name="android:datePickerStyle">@style/SpinnerDatePicker</item>
    </style>

    <!-- Tùy chỉnh DatePicker ở chế độ spinner -->
    <style name="SpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:calendarViewShown">false</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:spinnersShown">true</item>
        <item name="android:headerBackground">?android:attr/colorPrimary</item>
        <item name="android:yearListItemTextAppearance">@style/CustomDatePickerText</item>
        <item name="android:focusedMonthDateColor">@style/CustomDatePickerText</item>
        <item name="android:headerDayOfMonthTextAppearance">@style/CustomDatePickerText</item>
    </style>

    <!-- Tùy chỉnh TextAppearance cho các thành phần ngày, tháng, năm -->
    <style name="CustomDatePickerText" parent="android:TextAppearance.Material.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/background_light</item>
    </style>

    <style name="CustomRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_raidio_selector</item>
    </style>

</resources>